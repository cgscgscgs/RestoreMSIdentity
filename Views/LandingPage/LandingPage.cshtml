@{
    ViewData["Title"] = "Landing Page";
}

@model List<RestoreMSIdentity.Models.LandingPageModel>

<!-- header not needed:
<header>
    <h1>Green River Coalition</h1>
</header>
 -->

@if (Model == null)
{
    <p style="color: red;">Error: Model is null! Check if data is being passed from the controller.</p>
}
else
{
    <!-- title -->
    <div class="content" style="text-align: center;">
        <h1>Green River Coalition</h1>
        <h3>PROTECTING + ENHANCING THE GREEN RIVER + OUR WATERSHED</h3>

        <!-- tiles -->
        <div class="row">
            @foreach (var tile in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@tile.ImageUrl" class="card-img-top" alt="Site Image">
                        <div class="card-body">
                            <h5 class="card-title">@tile.Name</h5>
                            <p class="card-text">@tile.Description</p>
                            <p class="card-text">@tile.Location</p>
                        </div>
                    </div>
                </div>
            }
            <p>
                <strong>
                    Green River Coalition collaborates with community, municipalities, nonprofits,
                    educational institutions and other agencies to protect and enhance the Green River and our watershed.
                </strong>
            </p>

            <h4><a href="/Volunteer">Volunteer with Us!</a></h4>
        </div>
    </div>
}

<!-- footer not needed:

<footer>
    <div class="footer-content">
        <p> </p>
    </div>
</footer>

-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

