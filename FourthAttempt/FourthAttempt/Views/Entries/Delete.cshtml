@model FourthAttempt.Models.TheEntriesList


@{
    ViewData["Title"] = "Delete Entry";
}

<h2>Are you sure you want to delete this entry?</h2>
<div>
    <strong>Site Name:</strong> @Model.SiteName <br>
    <strong>Author:</strong> @Model.AuthorFirst @Model.AuthorLast <br>
    <strong>Role:</strong> @Model.AuthorRole <br>
    <strong>Summary:</strong> @Model.EntrySummary
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="SiteEntryID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
