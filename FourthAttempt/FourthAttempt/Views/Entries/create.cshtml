@model FourthAttempt.Models.TheEntriesList


@{
    ViewData["Title"] = "Add New Entry";
}

<h2>Add New Entry</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Site Name</label>
        <input asp-for="SiteName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Author First Name</label>
        <input asp-for="AuthorFirst" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Author Last Name</label>
        <input asp-for="AuthorLast" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Author Role</label>
        <input asp-for="AuthorRole" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Entry Summary</label>
        <textarea asp-for="EntrySummary" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Entry</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

